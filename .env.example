# SBS Travel - Communication Infrastructure Environment Variables

# Email Configuration
VITE_SMTP_HOST=smtp.gmail.com
VITE_SMTP_PORT=587
VITE_SMTP_USER=noreply@sbstravel.com
VITE_SMTP_PASS=your_app_password_here

# SendGrid Configuration (Alternative)
VITE_SENDGRID_API_KEY=your_sendgrid_api_key
VITE_SENDGRID_FROM_EMAIL=noreply@sbstravel.com
VITE_SENDGRID_FROM_NAME=SBS Travel

# AWS SES Configuration (Alternative)
VITE_AWS_SES_REGION=eu-west-1
VITE_AWS_ACCESS_KEY_ID=your_aws_access_key
VITE_AWS_SECRET_ACCESS_KEY=your_aws_secret_key
VITE_AWS_SES_FROM_EMAIL=noreply@sbstravel.com

# Turkish SMS Providers
VITE_NETGSM_USERNAME=your_netgsm_username
VITE_NETGSM_PASSWORD=your_netgsm_password
VITE_NETGSM_HEADER=SBSTRAVEL

VITE_ILETIMERKEZI_USERNAME=your_iletimerkezi_username
VITE_ILETIMERKEZI_PASSWORD=your_iletimerkezi_password
VITE_ILETIMERKEZI_HEADER=SBSTRAVEL

# Twilio (International SMS)
VITE_TWILIO_ACCOUNT_SID=your_twilio_account_sid
VITE_TWILIO_AUTH_TOKEN=your_twilio_auth_token
VITE_TWILIO_FROM_NUMBER=+1234567890

# WhatsApp Business API
VITE_WHATSAPP_ACCESS_TOKEN=your_whatsapp_business_token
VITE_WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
VITE_WHATSAPP_VERIFY_TOKEN=your_webhook_verify_token
VITE_WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id

# Note: In development mode, the application will use mock providers
# Set NODE_ENV=production to use real providers